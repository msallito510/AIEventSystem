        <input class="inputlabeladd" type="date" value="{{data.dateEnd}}" id="appt" name="dateto">
        <input class="inputlabeladd" type="time" value="{{data.timeEnd}}" id="appt" name="timeto">
        <br>
        <h2>Price â‚¬</h2>
        <input type="number" step=".01" value="{{data.price}}" class="inputadd" name="price" id="">
        <button class="btn" type="submit">Go</button>


        {{error}}
    </form>
</div>
