<div class="profile">
    <form action="/profile/edituser" method="post">
        <h3 class="userlabel center">{{error}}</h3>
        <input name="nametoedit" hidden value="{{datauser.username}}">
        <h5>Your username is : <span class="userlabel">{{datauser.username}}</span>
            <a class="edituser " id="editUser">Edit</a>
            <a class="edituser display" id="cancelEdit">Cancel</a>
        </h5>
        <input id="username" class="display" type="text" value="" name="name">
        <input id="buttonchange" class="display" type="submit" value="Save" name="">
        <br>
        <h5 class="display userlabel" id="useralert">Change username need re-login</h5>
    </form>
    <form action="/profile/editpass" method="post">
        <input name="nametoedit" hidden value="{{datauser.username}}">
        <h5>Change Password
            <a class="edituser" id="editPass">Edit</a>
            <a class="edituser display" id="cancelPass">Cancel</a>
        </h5>
        <input id="password" class="display" type="password" value="" name="pass">
        <input id="password2" class="display" type="password" value="" name="pass2">
        <input id="buttonchangepass" class="display" type="submit" value="Save" name="">
        <br>
        <h5 class="display userlabel" id="useralertpass">Change password need re-login</h5>
    </form>

    <form action="/action/upload" method="post">
        <input name="nametoedit" hidden value="{{datauser.username}}">
        <h5>Change Photo</h5>

        <div class="custom-file mb-3">
            <input type="file" name="picture" accept="application/x-zip-compressed,image/*">
            <input class="btn btn-primary" type="submit" value="submit">
    </form>



</div>
<script>
    var camera = document.getElementById('photo');
